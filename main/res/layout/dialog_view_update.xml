<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Update"
        android:textSize="26sp"
        android:id="@+id/txt_title"
        android:textAlignment="center"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather changes"
        android:id="@+id/title_update"
        android:textSize="18sp"
        android:layout_below="@+id/txt_title"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posted on: 27/05/2023 12:33"
        android:textSize="18sp"
        android:id="@+id/posted_on_update"
        android:layout_below="@+id/title_update"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The weather is expected to change thereby allowing more rains for the planting season"
        android:textSize="18sp"
        android:id="@+id/description_update"
        android:layout_below="@+id/posted_on_update"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starts on: 24/05/2023"
        android:textSize="18sp"
        android:id="@+id/start_update"
        android:layout_below="@+id/description_update"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ends On: 25/05/2023"
        android:textSize="18sp"
        android:id="@+id/end_update"
        android:layout_below="@+id/start_update"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@id/end_update"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/blue_green"
        android:id="@+id/dismiss"/>

</RelativeLayout>