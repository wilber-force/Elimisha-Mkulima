<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    android:background="#C0C0C0"
    android:layout_marginHorizontal="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/baseline_account_circle_24"
        android:id="@+id/connect_profile"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connect_name"
        android:layout_below="@+id/connect_profile"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_name"
        android:text="Farm Activities"
        android:id="@+id/connect_activities"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/connect_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_activities"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/bright_blue"
        android:text="Send Message" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>